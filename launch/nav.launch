<!--navigation-->
<launch>
    <!--mapserver************************************************-->
    <arg name='map' default="$(find nhk_2020)/map/map.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map)">
    </node>
    <!--*************************************************-->  
    <param name="use_sim_time" value="false"/>
    <node pkg="fake_localization" type="fake_localization" name="fake_localization" clear_params="true" output="screen">
     <remap from="base_pose_ground_truth" to="odom" />
     <param name="global_frame_id" value="map" />
     <param name="base_frame_id" value="base_link" />
  </node>
    
    <!--move_base************************************************-->    
        
        <arg name="cmd_vel_topic" default="cmd_vel" />
        <arg name="odom_topic" default="odom" />

        <node pkg="move_base" type="move_base" respawn="false" name="move_base" clear_params="true" output="screen">
        <param name="map_update_interval" value="0.3"/>
        <rosparam file="$(find nhk_2020)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />        
        <rosparam file="$(find nhk_2020)/param/costmap_common_params.yaml" command="load" ns="loacl_costmap" />        
        <rosparam file="$(find nhk_2020)/param/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find nhk_2020)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find nhk_2020)/param/base_local_planner_params.yaml" command="load" />
        <rosparam file="$(find nhk_2020)/param/controller.yaml" command="load" />
        </node>
       

        <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
        <remap from="odom" to="$(arg odom_topic)"/>
</launch>



